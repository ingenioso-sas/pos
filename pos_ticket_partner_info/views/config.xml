<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="pos_partner_config" model="ir.ui.view">
        <field name="name">pos.config.view</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form" />
        <field name="arch" type="xml">
            <xpath expr='//div[@id="inventory_location"]' position='after'>
                <h2>Customer</h2>
                <div class="row mt16 o_settings_container" id="signature">
                    <div
                        class="col-xs-12 col-md-6 o_setting_box"
                        title="Show customer signature in ticket."
                    >
                        <div class="o_setting_left_pane">
                            <field name="show_client_signature" />
                        </div>
                        <div class="o_setting_right_pane">
                            <label
                                for="show_client_signature"
                                string="show customer signature"
                            />
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
